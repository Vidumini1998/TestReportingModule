@model IEnumerable<PMSWebApplication.Models.MonthlyReport>
@{
    ViewBag.Title = "MonthlyReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Monthly Report</h2>

<div class="ui-widget">
    @using (Html.BeginForm())
    {
        <lable for="Sdate"><strong>Start Date</strong></lable>
        <input id="Sdate" name="Startdate" type="date"/>
        <input type="Submit" value="Search"/>
    } 
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Deadline)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProjectName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClientName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BugFixes)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.ProjectStatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalPayment)
        </th>
        @*<th></th>*@
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Deadline)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClientName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BugFixes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPayment)
            </td>
            @*<td>
                           @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                           @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                           @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                </td>*@
        </tr>
    }

</table>
